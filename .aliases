# vim: set ft=zsh:

# Dotfiles
alias conf='/usr/bin/git --git-dir=$HOME/.dotfiles --work-tree=$HOME'

# Core
alias ls='ls --hyperlink=auto --color=auto --sort=time'
alias l='ls -lA'
alias cat='bat'

# Applications
alias icat='kitty +kitten icat'
alias ssh='kitty +kitten ssh'

alias vim='nvim' v='vim'
alias k='kubectl'
alias kk='k9s --headless'
