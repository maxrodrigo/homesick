# vim: set ft=zsh:

# Dotfiles
alias conf='/usr/bin/git --git-dir=$HOME/.dotfiles --work-tree=$HOME'

# Utilities
alias ls='ls --hyperlink=auto --color=auto --sort=time --group-directories-first'
alias l='ls -lA'
alias cat='bat --style=numbers,changes'

# Applications
alias icat='kitty +kitten icat'
alias ssh='kitty +kitten ssh'

alias v='nvim'
alias k='kubectl'
alias kk='k9s --headless'
alias t='terraform'
