#! /bin/sh

sxhkd &
dunst &

setxkbmap -layout us -variant altgr-intl
feh --bg-scale ~/Pictures/wallpapers/bar.jpg

for m in $(bspc query -M); do bspc monitor $m -d I II III;done

bspc config remove_disabled_monitors  true
bspc config remove_unplugged_monitors true

bspc config border_width        1
bspc config window_gap          20
bspc config bottom_padding      0
bspc config top_padding         0

bspc config split_ratio          0.50
bspc config borderless_monocle   true
bspc config gapless_monocle      true

bspc config focus_follows_pointer true
bspc config pointer _modifier     mod4
bspc config pointer _action1      move

bspc config normal_border_color   "#0f0f13"
bspc config focused_border_color  "#0f0f13"
bspc config active_border_color   "#dc8b73"

bspc rule -a VirtualBoxVM focus=on follow=on state=fullscreen
