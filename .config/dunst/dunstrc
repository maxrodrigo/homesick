# vim: ft=cfg

[global]
    follow = mouse
    geometry = "400x5-5+5"

    padding = 10
    horizontal_padding = 20

    frame_width = 1
    separator_color = frame
    separator_height = 1
    idle_threshold = 120

    ### Text ###

    font = Monospace 8
    markup = full

    # The format of the message.  Possible variables are:
    #   %a  appname
    #   %s  summary
    #   %b  body
    #   %i  iconname (including its path)
    #   %I  iconname (without its path)
    #   %p  progress value if set ([  0%] to [100%]) or nothing
    #   %n  progress value if set without any extra characters
    #   %%  Literal %
    # Markup is allowed
    format = "<b>%s</b>\n%b\n%a"
    show_indicators = no

    ### Misc/Advanced ###

    dmenu = /usr/bin/rofi -p dunst:
    browser = /usr/bin/firefox
    startup_notification = true

    ### mouse

    mouse_left_click = do_action
    mouse_middle_click = close_all
    mouse_right_click = close_current

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space
    history = ctrl+grave
    context = ctrl+shift+period

[urgency_low]
    background = "#0c1519"
    foreground = "#5C7986"
    frame_color = "#5C7986"
    timeout = 10

[urgency_normal]
    background = "#0c1519"
    foreground = "#5C7986"
    frame_color = "#5C7986"
    timeout = 10

[urgency_critical]
    background = "#0c1519"
    foreground = "#5C7986"
    frame_color = "#5C7986"
    timeout = 0
